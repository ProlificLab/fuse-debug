{
	"version": "0.2.0",
	"configurations": [				
		{
			"type": "chrome",
			"request": "launch",
			"name": "Launch Chrome",
			"url": "http://localhost:4444",
			"webRoot": "${workspaceRoot}",
			"showAsyncStacks": true,
			"disableNetworkCache": true,
			"trace": "verbose",
			"sourceMapPathOverrides": {
				"/src/*": "${webRoot}/src/*"
			}
		},		
		{
			"type": "node",
			"request": "launch",
			"name": "Launch Fusebox",
			"program": "${workspaceRoot}/fuse.js",
			"showAsyncStacks": true,
			"smartStep": true
		}
	],
	"compounds": [
		{
			"name": "Start Both",
			"configurations": [
				"Launch Fusebox",
				"Launch Chrome"
			]
		}
	]
}